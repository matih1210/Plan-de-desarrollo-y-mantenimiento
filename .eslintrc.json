{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "only-multiline"]
  },
  "ignorePatterns": ["node_modules/", "dist/"]
}
